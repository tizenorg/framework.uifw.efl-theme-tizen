group {
	name: "elm/imageslider/base/default";
	parts {
		part { name: "background";
			type: RECT;
			mouse_events: 1;
			scale: 1;
			description {
				state: "default" 0.0;
				color: 0 0 0 0;
			}
		}

		part { name: "swl.photo";
			type: SWALLOW;
			mouse_events: 1;
			scale: 1;
			dragable {
//					confine: "background";
				x: 1 1 0;
				y: 1 1 0;
			}
			description {
				state: "default" 0.0;
//					min: MAIN_W MAIN_H;
			}
		}

		part { name: "block";
			type: RECT;
			mouse_events: 1;
			scale: 1;
			description {
				state: "default" 0.0;
				visible: 1;
				color: 0 0 0 0;
			}
			description {
				state: "unblock" 0.0;
				visible: 0;
				color: 0 0 0 0;
			}				
		}
	}

	programs {
		// Noti on/off event
		program {
			name: "block_on";
			signal: "block.on";
			source: "block";
			action: STATE_SET "default" 0.0;
			target: "block";
		}
		program {
			name: "block_off";
			signal: "block.off";
			source: "block";
			action: STATE_SET "unblock" 0.0;
			target: "block";
		}
		program {
			name: "photo_clicked";
			signal: "mouse,clicked,1";
			source: "block";
			action: SIGNAL_EMIT "elm,photo,clicked" "";
		} 
	}
}


